<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.example.chatexample.data.User" />
        <variable
            name="listener"
            type="com.example.chatexample.ui.chat.ChatListener" />
    </data>

    <RelativeLayout
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <RelativeLayout
            android:clickable="true"
            android:onClick="@{v -> listener.openChatDetail(item)}"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/conversationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/av_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:loadImage="@{item.avatar}"
                tools:src="@tools:sample/avatars" />

            <RelativeLayout
                android:id="@+id/rl_name_and_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/av_user"
                android:layout_alignBottom="@id/av_user"
                android:layout_toEndOf="@id/av_user"
                android:layout_marginEnd="55dp">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="6dp"
                    android:text="@{item.username}"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:id="@+id/txt_user_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/txt_user_name"
                    android:ellipsize="marquee"
                    android:text="@{item.description}"
                    tools:text="Description"
                    android:visibility="visible"
                    android:singleLine="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvSeprator"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/av_user"
                android:background="@color/light_grey"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_height="0.8dp"/>

            <TextView
                android:visibility="visible"
                tools:visibility="visible"
                android:id="@+id/messageTime"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:textSize="12sp"
                android:layout_alignTop="@id/rl_name_and_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11:50" />

        </RelativeLayout>

    </RelativeLayout>

</layout>

