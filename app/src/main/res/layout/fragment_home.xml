<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="listener"
            type="com.example.chatexample.ui.home.HomeListener" />
        <variable
            name="viewModel"
            type="com.example.chatexample.ui.home.HomeViewModel" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".MainActivity">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="56dp"
                    android:src="@drawable/cometchat_white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvComet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivLogo"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="CometChat"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvKS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvComet"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:text="Kitchen Sink App"
                    android:textColor="@color/colorPrimary"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvKS"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"
                    android:text="Login with one of our sample users" />

                <GridLayout
                    android:id="@+id/grid"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSL"
                    android:layout_centerHorizontal="true"
                    android:columnCount="2">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:paddingStart="8dp"
                        android:id="@+id/superhero1"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:rippleColor="@color/light_grey"
                        android:clickable="true"
                        android:paddingEnd="8dp"
                        android:backgroundTint="@color/primaryTextColor"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <RelativeLayout
                                android:id="@+id/superhero1_avatar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ProgressBar
                                    android:id="@+id/superhero1_progressbar"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ironman"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                            </RelativeLayout>
                            <TextView
                                android:textSize="16sp"
                                android:layout_marginStart="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:textAllCaps="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/textColorWhite"
                                android:layout_toEndOf="@+id/superhero1_avatar"
                                android:text="superhero1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:paddingStart="8dp"
                        android:id="@+id/superhero2"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:rippleColor="@color/light_grey"
                        android:clickable="true"
                        android:paddingEnd="8dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/primaryTextColor"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <RelativeLayout
                                android:id="@+id/superhero2_avatar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ProgressBar
                                    android:id="@+id/superhero2_progressbar"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/captainamerica"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                            </RelativeLayout>
                            <TextView
                                android:textSize="16sp"
                                android:layout_marginStart="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:textAllCaps="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/textColorWhite"
                                android:layout_toEndOf="@+id/superhero2_avatar"
                                android:text="superhero2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/superhero3"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        app:rippleColor="@color/light_grey"
                        android:clickable="true"
                        android:paddingEnd="8dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/primaryTextColor"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <RelativeLayout
                                android:id="@+id/superhero3_avatar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ProgressBar
                                    android:visibility="gone"
                                    android:id="@+id/superhero3_progressbar"
                                    android:layout_centerInParent="true"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/spiderman"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                            </RelativeLayout>
                            <TextView
                                android:textSize="16sp"
                                android:layout_marginStart="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:textAllCaps="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/textColorWhite"
                                android:layout_toEndOf="@+id/superhero3_avatar"
                                android:text="superhero3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:id="@+id/superhero4"
                        app:rippleColor="@color/light_grey"
                        android:clickable="true"
                        android:paddingEnd="8dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/primaryTextColor"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <RelativeLayout
                                android:id="@+id/woleverine_avatar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ProgressBar
                                    android:visibility="gone"
                                    android:id="@+id/superhero4_progressbar"
                                    android:layout_centerInParent="true"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/wolverine"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                            </RelativeLayout>
                            <TextView
                                android:textSize="16sp"
                                android:layout_marginStart="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:textAllCaps="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/textColorWhite"
                                android:layout_toEndOf="@+id/woleverine_avatar"
                                android:text="superhero4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/tvSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="or else login continue with" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_below="@id/tvSignIn"
                    android:backgroundTint="@color/primaryTextColor"
                    android:padding="8dp"
                    android:onClick="@{v -> listener.openLogin()}"
                    android:text="@{viewModel.isLogin ? @string/text_forward : @string/text_login}"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorWhite"
                    android:textSize="16sp"
                    app:rippleColor="@color/light_grey" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:text="@string/copyright"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</layout>
