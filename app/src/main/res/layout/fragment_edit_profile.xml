<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.chatexample.setting.profile.EditProfileViewModel" />
        <variable
            name="listener"
            type="com.example.chatexample.setting.profile.EditProfileListener" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:onClick="@{v -> listener.showCropImage()}"
            android:src="@drawable/ic_person"
            app:loadImage="@{viewModel.avatar}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Username"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:background="@drawable/bg_bolder_rectangle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.username}"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:onClick="@{v -> listener.showCropImage()}"
            android:text="Update"/>

    </LinearLayout>
</layout>
