<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="item"
            type="com.example.chatexample.data.FriendlyMessage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_message_grey"
            android:text="@{item.text}"
            android:maxWidth="250dp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/messengerImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This is a message" />

        <TextView
            android:id="@+id/messengerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:paddingHorizontal="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintStart_toStartOf="@id/messageTextView"
            app:layout_constraintTop_toBottomOf="@id/messageTextView"
            tools:text="FirstName LastName" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/messengerImageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/messageTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:loadImage="@{item.photoUrl}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


