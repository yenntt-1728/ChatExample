<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="listener"
            type="com.example.chatexample.ui.videoCall.VideoCallListener" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CallActivity">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/callLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:visibility="gone">

            <TextView
                android:id="@+id/incomingCallTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                tools:text="Someone is calling..." />

            <ImageView
                android:id="@+id/acceptBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/rejectBtn"
                android:padding="20dp"
                android:src="@drawable/ic_baseline_call_24" />

            <ImageView
                android:id="@+id/rejectBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="20dp"
                android:src="@drawable/ic_baseline_call_end_24" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp">

            <EditText
                android:id="@+id/friendNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/callBtn"
                android:hint="Who do you want to call?" />


            <Button
                android:id="@+id/callBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:onClick="@{v -> listener.callVideo()}"
                android:text="call" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/callControlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/toggleVideoBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#99000000"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_videocam_24" />

            <ImageView
                android:id="@+id/toggleAudioBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="36dp"
                android:background="#99000000"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_mic_24" />

        </LinearLayout>
    </RelativeLayout>
</layout>
